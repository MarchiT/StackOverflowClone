@page
@model LeaderboardModel
@{
    ViewData["Title"] = "Leaderboard";
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Points</th>
                    <th>Username</th>
                </tr>
            </thead>
            <tbody>
                @{int i = 1;}
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>@i @{i++;}</td>
                        <td>@item.Points</td>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>